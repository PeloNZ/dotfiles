[user]
    email = chriswharton@catalyst.net.nz
    name = Chris Wharton
[color]
    ui = auto
    diff = auto
    branch = auto
    log = auto
    status = auto
[core]
#	autocrlf = input
	filemode = false
	attributesfile = ~/.gitattributes
    logallrefupdates = true
	eol = lf
[alias]
    wtf = !git-wtf
    undo = git stash && git reset --hard
#    wipe = clean -f -d
    prune-all = !git remote | xargs -n 1 git remote prune
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    intercommit = !sh -c 'git show "$1" > .git/commit1 && git show "$2" > .git/commit2 && interdiff .git/commit[12] | less -FRS' -
    edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
    add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
    st = status
    lc = log ORIG_HEAD.. --stat --no-merges
    ci = commit
    br = branch
    co = checkout
    df = diff --ignore-all-space
    dfc = diff --cached --ignore-all-space
    who = shortlog -s --
    alias = !sh -c '[ $# = 2 ] && git config --global alias.\"$1\" \"$2\" && exit 0 || echo \"usage: git alias <new alias> <original command>\" >&2 && exit 1' -
    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    rem = remote -v
    dft = difftool
    chp = cherry-pick
	open = !sh ~/bin/open.sh
	eu = edit-unmerged
    su = submodule update

[push]
	default = tracking
[pack]
	threads = 0
[diff "image"]
	command = ~/bin/git-imgdiff
[diff]
    tool = vimdiff
	submodule = log
[difftool]
    prompt = false
[log]
    decorate = full
[branch]
    rebase = true
    autosetuprebase = always
[init]
	templatedir = ~/.git_template
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[help]
	autocorrect = 1
[merge]
	renamelimit = 999999
	tool = vimdiff
	conflictstyle = diff3
[status]
	submodulesummary = 0
[mergetool]
	prompt = false
[merge "ours"]
	driver = true
[diff "nodiff"]
	command = /bin/true
